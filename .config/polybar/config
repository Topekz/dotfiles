[colors]
black = #000000
white = #ffffff 
red = #e53935
blue = #1e88e5
green = #43a047
yellow = #fdd835
orange = #fb8c00
grey = #757575
bg = #05181D
fg = #ffffff
accent = #C24658
accent1 = #C24658
accent2 = #A4304F
accent3 = #5C4058

[bar/mybar]
width = 100%
height = 24
line-size = 2

border-size = 0
border-color = ${colors.accent}

background = ${colors.bg}
foreground = ${colors.fg}

module-margin-left = 0
module-margin-right = 0

padding-left = 0
padding-right = 0

tray-position = none

font-0 = "Noto Sans Mono:pixelsize=12;2"
font-1 = "Droid Sans Mono for Powerline:pixelsize=17;4"

cursor-click = pointer

scrollup = i3wm-wsnext
scrolldown = i3wm-wsprev

modules-left = i3
modules-center = date
modules-right = arrow wireless-network arrow2 battery arrow3 xbacklight pulseaudio

[module/arrow]
type = custom/text
content = ""
content-foreground = ${colors.accent3}

[module/arrow2]
type = custom/text
content = ""
content-foreground = ${colors.accent2}
content-background = ${colors.accent3}

[module/arrow3]
type = custom/text
content = ""
content-foreground = ${colors.accent1}
content-background = ${colors.accent2}

[module/date]
type = internal/date
interval = 1
time = %H:%M
date = %d-%m

label = %date% %time%

[module/battery]
type = internal/battery
battery = BAT0
adapter ADP1
poll-interval = 5

label-full-background = ${colors.accent2}
label-charging-background = ${colors.accent2}
label-discharging-background = ${colors.accent2}

label-full =  Batt: Full 
label-charging =  BATT: %percentage%% 
label-discharging = BATT: %percentage%% 

[module/pulseaudio]
type = internal/pulseaudio

interval = 5
use-ui-max = false

label-volume-background = ${colors.accent1}
label-muted-background = ${colors.accent1}

label-muted-foreground = ${colors.bg}
label-volume =  VOL: %percentage%% 
label-muted =  VOL: muted 

[module/xbacklight]
type = internal/xbacklight
label-background = ${colors.accent1}
label =  BL: %percentage%% 

[module/wireless-network]
type = internal/network
interface = wlp3s0

label-connected-background = ${colors.accent3}
label-disconnected-background = ${colors.accent3} 

label-disconnected-foreground = ${colors.bg}
label-connected = "%{A1:networkmanager_dmenu &:} W: %essid% %{A}"
label-disconnected = "%{A1:networkmanager_dmenu &:} W: disconnected %{A}"

[module/i3]
type = internal/i3
index-sort = true

label-focused = " %index% "
label-focused-background = ${colors.accent}
label-unfocused = " %index% "
label-visible = " %index% "
label-visible-underline = ${colors.accent}
label-urgent = " %index% "
